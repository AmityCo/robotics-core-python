# ARC2 Server Configuration
# Copy this file to .env and update with your actual values

# ================================
# Server Settings
# ================================
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ================================
# CORS Settings
# ================================
# Comma-separated list of allowed origins (* for all)
CORS_ORIGINS=*

# ================================
# Timeout Settings
# ================================
REQUEST_TIMEOUT=30

# ================================
# Logging Settings
# ================================
LOG_VALIDATION=true
VALIDATION_LOG_DIR=validation_logs

# ================================
# AWS Configuration
# ================================
# Your AWS Access Key ID
AWS_ACCESS_KEY_ID=your_aws_access_key_here

# Your AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# ================================
# DynamoDB Settings
# ================================
DYNAMODB_TABLE_NAME=RoboticConfigureTable-prod
DYNAMODB_REGION=ap-southeast-1

# ================================
# Knowledge Management API Settings
# ================================
ASAP_KM_TOKEN=your_asap_km_token_here

# ================================
# Azure Application Insights Settings
# ================================
# Your Azure Application Insights connection string
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-instrumentation-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/;LiveEndpoint=https://your-region.livediagnostics.monitor.azure.com/

# ================================
# Example for different environments
# ================================
# For development:
# DEBUG=true
# DYNAMODB_TABLE_NAME=RoboticConfigureTable-dev
# PORT=8000

# For production:
# DEBUG=false
# DYNAMODB_TABLE_NAME=RoboticConfigureTable-prod
# PORT=80
